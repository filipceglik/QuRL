{
  "manifest_version": 2,
  "name": "QuRL",
  "version": "0.1",
  "author": "Filip Ceglik",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["jquery-3.5.0.min.js", "qrcode.min.js", "generate.js"]
    }
  ],
  "browser_action": {
  "default_icon": "icon.png",
  "default_popup": "popup.html"
},
"icons": { "48": "48.png",
          "128": "128.png" 
},
"background": {
  "scripts": ["background.js"],
  "persistent": false
}
}
